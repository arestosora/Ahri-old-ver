generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  UserID     String   @id
  Pedidos     Int @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pedidos {
  GuildID String @default("1133932007236309072") 
  SN String
  Referencia String @id
  UserID String
  Pedido String
  Estado String @default("Pendiente")
  Comprobante String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model Config {
  GuildID String @id @default("1133932007236309072")
  Pedidos_Enabled Boolean @default(true) 
}

model Cuentas {
  Nickname String
  Username String @id
  Password String
  RPTotal Int @default(0)
  RPDisponibles Int @default(0)
}
